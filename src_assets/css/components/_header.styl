$header-transition = all 0.5s $quad-easing
$header-shadow = 0px 1px 4px -2px rgba(0,0,0,.15)

.header
	transition $header-transition
	position sticky
	top 0
	background-color rgba($bg-color, 0.98)
	z-index 10
	padding $spacing*1.5 0 $spacing 0
	// border-bottom 1px solid $gray-medium

	ul
		font-size $small-font

	a
		text-decoration none
		font-family $sans
		// font-weight $fw-sans
		// letter-spacing $letter-spacing
		color $gray-dark
		font-size $small-font
		transition $header-transition
		line-height 1

a.site-title
	display block
	color $gray

.header__title
	transition $header-transition
	text-align center
	+medium()
		text-align left

// on-scroll
.header.header--scroll
	// box-shadow $header-shadow
	border-bottom 1px solid $gray-medium
	padding $spacing*0.5 0
	a
		font-size $micro-font
		color $gray


