$header-transition = all 0.5s $quad-easing
$header-shadow = 0px 1px 4px -2px rgba(0,0,0,.15)

.header
	transition: $header-transition
	text-align: center

	ul
		font-size: $sans-base

	a
		text-decoration: none
		font-family: $sans
		font-weight: $fw-sans
		letter-spacing: $letter-spacing
		color: $gray-dark
		font-size: $sans-base
		transition: $header-transition
		line-height: 1

	+large()
		text-align: left
		.header__nav
			text-align: right

a.site-title
	display: block
	color: $gray

.header__title
	transition: $header-transition

// on-scroll
.header.header--bg
	background-color: rgba(#ffffff, 0.97)
	box-shadow: $header-shadow
	a
		font-size: $sans-small
		color: $gray

	.header__title
		// display: none
		transform: scale(0)
		+large()
			transform: scale(1)


// fixed-title
.fixed-title
	font-size: $base-size
	font-weight: $fw-bold
	font-style: italic
	transition: $header-transition
	display: none // hide on mobile

	ul
		font-size: $sans-small

	+large()
		display: block

.fixed-title--hidden
	 opacity: 0

.fixed-title--visible
		opacity: 1

// nav
.nav
	list-style-type: none
	padding: 0
	margin: 0

.nav ul
	display: flex
	flex-wrap: wrap
	align-items: center
	justify-content: space-between
	width: 100%
	margin: 0
	padding: 0
	line-height: 1

	+large()
		display: block

.nav li
	display: inline-block
	margin: 0
	line-height: 1
	line-height: 1

	+large()
		margin-right: $spacing
		&:last-of-type
			margin-right: 0

.nav .active a
	color: $site-color
