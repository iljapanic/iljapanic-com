@supports (display:grid)
	+medium()
		// HEADER
		.header
			display grid
			grid-gap $spacing
			grid-template-columns auto 1fr
			grid-template-rows 1fr

		// BIO
		.bio
			display grid
			grid-gap $spacing
			grid-template-columns auto $body

