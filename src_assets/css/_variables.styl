// typography
$base-font-size = 24 // in px
$base-line-height = 1.55
$leading = $base-line-height * 1rem
$scale = 1.125

$root-size = ($base-font-size / 16 * 100%)

$h1-size = (1.35 * $scale * 1rem)
$h1-line-height = (1.5 * $leading)

$h2-size = (1.25 * $scale * 1rem)
$h2-line-height = (1 * $leading)

$h3-size = 1.15 * $scale * 1rem
$h3-line-height = (1 * $leading)

$h4-size = ($scale * 0.9) * 1rem
$h4-line-height = (1 * $leading)

$micro-font = $scale * 0.65rem
$small-font = $scale * 0.75rem
$large-font = $scale * 1.15rem

$letter-spacing = .03rem

// font
$serif-fallback = Palatino, 'Palatino Linotype', 'Palatino LT STD', 'Book Antiqua', Georgia, serif
$sans-serif-fallback = 'Gill Sans MT', Calibri, sans-serif

$serif = 'Leitura News W01', $serif-fallback
$sans = 'Freight Sans W01', $sans-serif-fallback
$monospace = 'Input Mono', 'Source Code Pro', 'Monaco', monospace

$fw-base = 300
$fw-medium = 400
$fw-bold = 500

$fw-heading = 300


// spacing
$wrap = 42rem
$body = 32rem
$paragraph = 28rem
$spacing = $leading

// media queries
$bp-s = 40rem // max
$bp-m = 60rem // min
$bp-l = 75rem // min
$bp-xl = 90rem // min

// colors
$site-color = #C0392B
$text-color = #000207
$bg-color = #ffffff

$gray-light = #f8f8f8
$gray-medium = #eee
$gray-dark = #5f5f5f
$gray = #999999

$selection = rgba(255, 255, 0, 0.25)

$twitter = #1dcaff
$linkedin = #007bb5
$instagram = #cd486b
$github = #171515
$rss = #f26522

$separator = 1px solid $gray-medium

// animation
$quad-easing = cubic-bezier(0.455, 0.030, 0.515, 0.955)
