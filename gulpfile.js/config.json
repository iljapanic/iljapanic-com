{
  "root": {
    "src": "./src",
    "dest": "./dist"
  },

  "tasks": {

    "browserSync": {
      "server": {
        "baseDir": "./dist"
      }
    },

    "css": {
      "src": "scss",
      "dest": "assets/css",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "html",
      "dest": "./",
      "dataSrc": "html/_data",
      "dataGlobal": "html/_data/global.json",
      "dataCv": "html/_data/cv.json",
      "dataProjects": "html/_data/projects.json",
      "dataBooks": "html/_data/books.json",
      "dataServices": "html/_data/services.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "njk", "json"]
    },

    "include": {
      "src": "includes",
      "dest": "./",
      "extensions": ["*"]
    },

    "images": {
      "src": "images",
      "dest": "assets/img",
      "extensions": ["jpg", "png", "svg", "gif", "jpeg", "ico"]
    },

    "markdown": {
      "src": "markdown",
      "dest": "_text",
      "extensions": ["md", "markdown", "txt"]
    },

    "scripts": {
      "src": "javascript",
      "dest": "assets/js",
      "extensions": ["js","jsx"]
    }
  }
}
