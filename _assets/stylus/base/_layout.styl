.main
  padding $top-space $top-space*0.5

  +medium()
    padding $top-space $top-space

.header
  padding $top-space*0.5

  +medium()
    padding $top-space

.footer
  padding $top-space $top-space*0.5

.wrap
  margin-left auto
  margin-right auto
  max-width $wrap

.wrap-l
  margin-left auto
  margin-right auto
  max-width $wrap-l

@supports (display:grid)
  +medium()
    .l-container
      display grid
      grid-template-columns $sidebar auto // l-sidebar + l-main

  +large()
    .l-split
      display grid
      grid-template-columns $split auto
      grid-gap $spacing*1.25
