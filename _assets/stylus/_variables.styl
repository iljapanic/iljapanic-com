// typography
$baseFontSize = 19
$baseFontSizeMobile = 16
$baseLineHeight = 1.55
$leading = $baseLineHeight * 1rem
$scale = 1.125

$base-size = ($baseFontSize/16) * 100%
$base-size-mobile = ($baseFontSizeMobile/16) * 100%

$base = 1rem
$large = $scale * 1rem
$small = $scale * 0.85rem
$micro = $scale * 0.7rem

$letter-spacing = .03rem

// font
$serif-fallback = Palatino, 'Palatino Linotype', 'Palatino LT STD', 'Book Antiqua', Georgia, serif
$sans-fallback = 'Gill Sans MT', Calibri, sans-serif
$sans = 'Avenir Next W01', -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, $sans-fallback
$monospace = 'Input Mono', 'Source Code Pro', 'Monaco', monospace

$fw-base = 400
$fw-medium = 500
$fw-bold = 600
$fw-heading = 500


// spacing
$wrap = 48rem
$wrap-l = 58rem
$body = 32rem
$paragraph = 36rem

$spacing = $leading

$sidebar = 12rem
$split = 14rem
$top-space = $spacing*1.5

// media queries
$bp-s = 40rem // max
$bp-m = 60rem // min
$bp-l = 75rem // min
$bp-xl = 90rem // min

// colors
$gray-lightest = #f8f8f8
$gray-light = #e6e6e6
$gray = #999999
$gray-dark = #5f5f5f
$gray-darkest = #464646


$selection = rgba(255, 255, 0, 0.25)

$twitter = #1dcaff
$linkedin = #007bb5
$instagram = #cd486b
$github = #171515
$rss = #f26522

$site-color = #C0392B
$text-color = #000207
$text-light = #f1f2f0
$bg = #ffffff
$bg-dark = #202020

$separator = 1px solid rgba($gray-light, 0.75)
$sidebar-color = $gray-lightest

// animation
$quad-easing = cubic-bezier(0.455, 0.030, 0.515, 0.955)
$theme-transition-duration = 0.5s
$theme-transition-easing = $quad-easing
$theme-transition = all $theme-transition-duration $theme-transition-easing
