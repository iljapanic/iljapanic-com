---
const { src } = Astro.props
let alt: string = ''
if (Astro.slots.has('default')) {
  alt = await Astro.slots.render('default')
  alt = alt.replace(/(<([^>]+)>)/gi, '')
}
---

<figure>
  <img src={src} alt={alt} />
  <figcaption class="mt-2 text-center font-normal italic text-secondary">
    <slot />
  </figcaption>
</figure>
